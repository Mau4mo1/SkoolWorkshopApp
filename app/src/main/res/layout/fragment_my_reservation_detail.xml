<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llmy_reservation_detail01"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/top_background_login"
            android:orientation="horizontal" />
        <TextView
            android:id="@+id/tv_my_reservation_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:text="Reserverings gegevens"
            app:layout_constraintTop_toBottomOf="@+id/llmy_reservation_detail01"
            android:layout_marginTop="20sp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <LinearLayout
            android:layout_marginStart="20sp"
            android:layout_width="380sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_reservation_detail_description"
            app:layout_constraintLeft_toLeftOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/cart_table_background">
                <TextView
                    android:id="@+id/tv_my_reservation_detail_workshop_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="De workshop\nAantal rondes: 0\nAantal minuten per\nworkdhopronde: 0\nTotale duur:0"
                    android:textColor="@color/text_grey"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/tv_my_reservation_detail_workshop_prijs"
                    android:layout_gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="*prijs*"
                    android:textColor="@color/text_grey"
                    android:textSize="17sp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/cart_table_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extra kosten:"
                    android:textColor="@color/text_grey"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/tv_my_reservation_detail_extra_kost"
                    android:layout_gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="*Extra kosten(bijv graffitie)*"
                    android:textColor="@color/text_grey"
                    android:textSize="17sp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/cart_table_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reiskosten:"
                    android:textColor="@color/text_grey"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/tv_my_reservation_detail_travel_kost"
                    android:layout_gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="*De reiskosten*"
                    android:textColor="@color/text_grey"
                    android:textSize="17sp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/cart_table_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Betaalmetoden:"
                    android:textColor="@color/text_grey"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/tv_my_reservation_detail_payment_method"
                    android:layout_gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="*CJP of contant*"
                    android:textColor="@color/text_grey"
                    android:textSize="17sp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/cart_table_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Totaal prijs:"
                    android:textColor="@color/text_grey"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/tv_my_reservation_detail_total_kost"
                    android:layout_gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="*Totaal prijs*"
                    android:textColor="@color/text_grey"
                    android:textSize="17sp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/cart_table_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wil je gebruik van ons online\ninschrijfsysteem?:"
                    android:textColor="@color/text_grey"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/tv_my_reservation_id"
                    android:layout_gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="*ja/nee*"
                    android:textColor="@color/text_grey"
                    android:textSize="17sp"
                    android:gravity="right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/cart_table_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wil je gebruik maken van\neen gratis compilatie filmpje\nen foto's?:"
                    android:textColor="@color/text_grey"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/tv_my_total_kost"
                    android:layout_gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="*ja/nee*"
                    android:textColor="@color/text_grey"
                    android:textSize="17sp"
                    android:gravity="right"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>