<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cultureday_form_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Cultuurdag boeken"
            android:textSize="32sp"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"/>
        <DatePicker
            android:id="@+id/tv_cultureday_form_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_cultureday_form_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20sp"/>
        <TextView
            android:id="@+id/tv_cultureday_form_rounds_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_cultureday_form_date"
            android:text="Aantal rondes"
            android:layout_marginStart="20sp"
            android:textSize="16sp"/>
        <EditText
            android:inputType="number"
            android:id="@+id/edn_cultureday_form_rounds_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_cultureday_form_rounds_description"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"/>
        <TextView
            android:id="@+id/tv_cultureday_form_workshops_per_round_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edn_cultureday_form_rounds_field"
            android:text="Aantal workshops per workshopronde"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edn_cultureday_form_workshops_per_round_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_cultureday_form_workshops_per_round_description"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"/>
        <TextView
            android:id="@+id/tv_cultureday_form_time_per_round_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edn_cultureday_form_workshops_per_round_field"
            android:text="Aantal minuten per workshopronde"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edn_cultureday_form_time_per_round_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_cultureday_form_time_per_round_description"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"/>
        <TextView
            android:id="@+id/tv_cultureday_form_workshops_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edn_cultureday_form_time_per_round_field"
            android:text="Kies je workshops"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:textSize="16sp"/>
        <LinearLayout
            android:id="@+id/linear_layout_dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:text="Hip hop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cultureday_form_workshops_description" >
            <Spinner
                android:id="@+id/sv_cultureday_form_catagorie_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:spinnerMode="dropdown"/>
            <CheckBox
                android:id="@+id/sv_cultureday_form_workshoplist_dans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="meat"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_cultureday_form_timescheme_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_layout_dropdown"
            android:text="Tijdschema, Geef hier op hoe jullie het tijdschema willen hebben (aantal rondes met eventueel pauzes)"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edm_cultureday_form_timescheme_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_cultureday_form_timescheme_description"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"/>
        <TextView
            android:id="@+id/tv_cultureday_form_participants_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/edm_cultureday_form_timescheme_field"
            app:layout_constraintLeft_toLeftOf="parent"
            android:hint="Aantal deelnemers"
            android:layout_marginTop="8sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"/>
        <EditText
            android:id="@+id/edn_cultureday_form_participants_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_cultureday_form_participants_header"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"/>
        <TextView
            android:id="@+id/tv_cultureday_form_participants_shirt_and_drums_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/edn_cultureday_form_participants_field"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Deelnemers voor de workshops "
            android:layout_marginTop="8sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"/>
        <EditText
            android:id="@+id/edn_cultureday_form_participants_shirt_and_drums_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_cultureday_form_participants_shirt_and_drums_description"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Deelnemers voor de workshops "
            android:layout_marginTop="8sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"/>
        <TextView
            android:id="@+id/tv_cultureday_form_learninglevel_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/edn_cultureday_form_participants_shirt_and_drums_field"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Leerniveau"
            android:layout_marginTop="8sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"/>
        <EditText
            android:id="@+id/edt_cultureday_form_learninglevel_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_cultureday_form_learninglevel_description"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"/>
        <TextView
            android:id="@+id/tv_cultureday_form_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_cultureday_form_learninglevel_field"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:text="Subtotal"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_book_now_cdf"
            android:layout_width="350sp"
            android:layout_height="60sp"
            app:layout_constraintTop_toBottomOf="@id/edt_cultureday_form_learninglevel_field"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20sp"
            android:text="Boek nu"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>