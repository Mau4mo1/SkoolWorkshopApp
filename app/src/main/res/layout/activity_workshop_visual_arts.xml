<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_workshops_visual_arts_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/title_workshops"
        android:textSize="32sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        tools:ignore="MissingConstraints" />

    <include
        android:id="@+id/include_workshop_graffiti"
        layout="@layout/fragment_workshop_box"
        app:layout_constraintTop_toBottomOf="@+id/tv_workshops_visual_arts_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <include
        android:id="@+id/include_workshop_light_graffiti"
        layout="@layout/fragment_workshop_box"
        app:layout_constraintTop_toBottomOf="@+id/include_workshop_graffiti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <include
        android:id="@+id/include_workshop_stop_motion"
        layout="@layout/fragment_workshop_box"
        app:layout_constraintTop_toBottomOf="@+id/include_workshop_light_graffiti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <include
        android:id="@+id/include_workshop_tshirt_design"
        layout="@layout/fragment_workshop_box"
        app:layout_constraintTop_toBottomOf="@+id/include_workshop_stop_motion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>