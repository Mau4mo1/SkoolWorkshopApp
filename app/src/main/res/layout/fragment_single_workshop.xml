<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_workshop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="3sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/layout_bg_workshop"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_workshop_image_workshop"
            android:layout_width="110sp"
            android:layout_height="match_parent"
            android:background="@drawable/home_image_border" />

        <LinearLayout
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_workshop_title_workshop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="@string/title_workshops"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_workhop_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="@string/lorem_ipsum_long"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:maxLines="2"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>