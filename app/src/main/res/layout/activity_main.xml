<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/home_relative_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"
            android:layout_toLeftOf="@+id/register_button"
            android:layout_margin="5dp"
            android:textSize="12sp"
            android:text="@string/title_login"/>

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="@string/title_register"
            android:textSize="12sp"/>

    </RelativeLayout>>

    <TextView
        android:id="@+id/text_view_greeting"
        app:layout_constraintTop_toBottomOf="@+id/home_relative_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello There"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="12dp"
        android:textSize="25sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/home_item_border"
        android:id="@+id/home_item_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_greeting"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/home_item_notifications_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="300px"
            android:layout_height="300px"
            android:background="@drawable/home_image_border"/>

        <TextView
            android:id="@+id/home_item_notifications_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/home_item_notifications_image"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Meldingen"
            android:layout_margin="10dp"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/home_item_notifications_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/home_item_notifications_image"
            app:layout_constraintTop_toBottomOf="@+id/home_item_notifications_head"
            android:text="Lorem ipsem blablabla"
            android:layout_margin="10dp"
            android:textSize="18sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/home_item_border"
        android:id="@+id/home_item_loyalty_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_item_notifications"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/home_item_loyalty_points_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="300px"
            android:layout_height="300px"
            android:background="@drawable/home_image_border"/>

        <TextView
            android:id="@+id/home_item_loyalty_points_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/home_item_loyalty_points_image"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Spaarpunten"
            android:layout_margin="10dp"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/home_item_loyalty_points_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/home_item_loyalty_points_image"
            app:layout_constraintTop_toBottomOf="@+id/home_item_loyalty_points_head"
            android:text="Lorem ipsem blablabla"
            android:layout_margin="10dp"
            android:textSize="18sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/menu_color"
        app:itemTextColor="@color/menu_color"
        app:labelVisibilityMode="labeled"/>

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation"/>

</androidx.constraintlayout.widget.ConstraintLayout>