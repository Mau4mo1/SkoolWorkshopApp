<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.workshops.WorkshopsFragment">

    <TextView
        android:id="@+id/tv_workshops_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/title_workshops"
        android:textSize="32sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_visual_arts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_workshops_title"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp">

        <ImageView
            android:id="@+id/iv_visual_arts"
            android:layout_width="170dp"
            android:layout_height="130dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:foreground="@drawable/home_image_border" />

        <TextView
            android:id="@+id/tv_visual_arts"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_visual_arts"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAlignment="center"
            android:text="Beeldende Kunst"
            android:textSize="18sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_dance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_workshops_title"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/iv_dance"
            android:layout_width="170dp"
            android:layout_height="130dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/home_image_border"/>

        <TextView
            android:id="@+id/tv_dance"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_dance"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAlignment="center"
            android:text="Dans"
            android:textSize="18sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_visual_arts"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp">

        <ImageView
            android:id="@+id/iv_media"
            android:layout_width="170dp"
            android:layout_height="130dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/home_image_border"/>

        <TextView
            android:id="@+id/tv_media"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_media"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAlignment="center"
            android:text="Media"
            android:textSize="18sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_dance"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/iv_music"
            android:layout_width="170dp"
            android:layout_height="130dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/home_image_border"/>

        <TextView
            android:id="@+id/tv_music"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_music"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAlignment="center"
            android:text="Muziek"
            android:textSize="18sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_media"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp">

        <ImageView
            android:id="@+id/iv_sport"
            android:layout_width="170dp"
            android:layout_height="130dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/home_image_border"/>

        <TextView
            android:id="@+id/tv_sport"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_sport"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAlignment="center"
            android:text="Sport"
            android:textSize="18sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_theater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_music"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/iv_theater"
            android:layout_width="170dp"
            android:layout_height="130dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/home_image_border"/>

        <TextView
            android:id="@+id/tv_theater"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_theater"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAlignment="center"
            android:text="Theater"
            android:textSize="18sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>