<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.workshops.WorkshopsForm">

        <TextView
            android:id="@+id/tv_workshops_form_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/txt_book_workshop"
            android:textSize="32sp"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"/>

        <DatePicker
            android:id="@+id/dp_workshop_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_workshops_form_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20sp"/>

        <TextView
            android:id="@+id/tv_workshops_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dp_workshop_form"
            android:text="@string/title_participants"
            android:layout_marginStart="20sp"
            android:textSize="16sp"/>

        <EditText
            android:inputType="number"
            android:id="@+id/et_workshop_participants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_workshops_participants"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"/>

        <TextView
            android:id="@+id/tv_workshops_rounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_workshop_participants"
            android:text="@string/title_rounds"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_workshop_rounds"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_workshops_rounds"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"/>

        <TextView
            android:id="@+id/tv_workshops_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_workshop_rounds"
            android:text="@string/title_minutes"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_workshop_minutes"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_workshops_minutes"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"/>

        <TextView
            android:id="@+id/tv_workshops_timetable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_workshop_minutes"
            android:text="@string/title_timetable"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_workshop_timetable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_workshops_timetable"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"/>

        <TextView
            android:id="@+id/tv_workshops_learning_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_workshop_timetable"
            android:text="@string/title_learning_level"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_workshop_learning_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_workshops_learning_level"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"/>
        
        <TextView
            android:id="@+id/tv_total_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_workshop_learning_level"
            android:text="@string/text_minutes"
            android:layout_marginStart="50sp"
            android:layout_marginTop="20sp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total_minutes"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="50sp"
            android:text="@string/subtotal"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_workshop_form_book"
            android:layout_width="350sp"
            android:layout_height="60sp"
            app:layout_constraintTop_toBottomOf="@id/tv_subtotal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20sp"
            android:text="@string/book_now"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
