<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/sv_category_workshops"
    android:layout_marginBottom="70sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_workshop_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/title_workshop_music"
            android:textSize="32sp"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/title_workshop_music"
            android:layout_marginTop="40sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">

            <LinearLayout
                android:id="@+id/layout_workshop_caribbean_drums"
                android:background="@drawable/layout_bg_workshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp">

                <ImageView
                    android:id="@+id/iv_workshop_caribbean_drums"
                    android:layout_width="110sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_image_border"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_workshop_caribbean_drums_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_caribbean_drums"
                            android:layout_margin="10sp"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/tv_workhop_caribbean_drums_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsem blablabla"
                            android:layout_margin="10sp"
                            android:textSize="18sp"/>

                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/caribbean_drums_info"
                        android:background="@drawable/layout_bg"
                        android:src="@drawable/ic_baseline_info_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70sp"
                        android:layout_marginRight="10sp"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_workshop_ghetto_drums"
                android:background="@drawable/layout_bg_workshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp">

                <ImageView
                    android:id="@+id/iv_workshop_ghetto_drums"
                    android:layout_width="110sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_image_border"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_workshop_ghetto_drums_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_ghetto_drums"
                            android:layout_margin="10sp"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/tv_workhop_ghetto_drums_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsem blablabla"
                            android:layout_margin="10sp"
                            android:textSize="18sp"/>

                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/ghetto_drums_info"
                        android:background="@drawable/layout_bg"
                        android:src="@drawable/ic_baseline_info_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70sp"
                        android:layout_marginRight="10sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_workshop_live_looping"
                android:background="@drawable/layout_bg_workshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp">

                <ImageView
                    android:id="@+id/iv_workshop_live_looping"
                    android:layout_width="110sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_image_border"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_workshop_live_looping_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_live_looping"
                            android:layout_margin="10sp"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/tv_workshop_live_looping_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsem blablabla"
                            android:layout_margin="10sp"
                            android:textSize="18sp"/>

                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/live_looping_info"
                        android:background="@drawable/layout_bg"
                        android:src="@drawable/ic_baseline_info_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70sp"
                        android:layout_marginRight="10sp"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_workshop_percussie"
                app:layout_constraintTop_toBottomOf="@+id/layout_workshop_live_looping"
                android:background="@drawable/layout_bg_workshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp">

                <ImageView
                    android:id="@+id/iv_workshop_percussie"
                    android:layout_width="110sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_image_border"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_workshop_percussie_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_percussie"
                            android:layout_margin="10sp"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/tv_workhop_percussie_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsem blablabla"
                            android:layout_margin="10sp"
                            android:textSize="18sp"/>

                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/percussion_info"
                        android:background="@drawable/layout_bg"
                        android:src="@drawable/ic_baseline_info_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70sp"
                        android:layout_marginRight="10sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_workshop_popstar"
                app:layout_constraintTop_toBottomOf="@+id/layout_workshop_percussie"
                android:background="@drawable/layout_bg_workshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp">

                <ImageView
                    android:id="@+id/iv_workshop_popstar"
                    android:layout_width="110sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_image_border"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_workshop_popstar_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_popstar"
                            android:layout_margin="10sp"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/tv_workhop_popstar_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsem blablabla"
                            android:layout_margin="10sp"
                            android:textSize="18sp"/>

                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/popstar_info"
                        android:background="@drawable/layout_bg"
                        android:src="@drawable/ic_baseline_info_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70sp"
                        android:layout_marginRight="10sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_workshop_rap"
                app:layout_constraintTop_toBottomOf="@+id/layout_workshop_popstar"
                android:background="@drawable/layout_bg_workshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp">

                <ImageView
                    android:id="@+id/iv_workshop_rap"
                    android:layout_width="110sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_image_border"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_workshop_rap_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_rap"
                            android:layout_margin="10sp"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/tv_workhop_rap_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsem blablabla"
                            android:layout_margin="10sp"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/rap_info"
                        android:background="@drawable/layout_bg"
                        android:src="@drawable/ic_baseline_info_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70sp"
                        android:layout_marginRight="10sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>