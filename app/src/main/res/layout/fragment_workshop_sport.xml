<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/sv_category_workshops">


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_workshop_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/title_workshop_media"
            android:textSize="32sp"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/layout_workshop_bootcamp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            app:layout_constraintTop_toBottomOf="@+id/title_workshop_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/layout_bg_workshop"
            android:layout_marginTop="40sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">

            <ImageView
                android:id="@+id/iv_workshop_bootcamp"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:background="@drawable/home_image_border"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="40sp">
                    <TextView
                        android:id="@+id/tv_workshop_bootcamp_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_bootcamp"
                        android:layout_margin="10sp"
                        android:textSize="22sp"/>

                    <TextView
                        android:id="@+id/tv_workhop_bootcamp_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsem blablabla"
                        android:layout_margin="10sp"
                        android:textSize="18sp"/>

                </LinearLayout>
                <ImageButton
                    android:background="@drawable/layout_bg"
                    android:src="@drawable/ic_baseline_info_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_workshop_capoeira"
            xmlns:android="http://schemas.android.com/apk/res/android"
            app:layout_constraintTop_toBottomOf="@+id/layout_workshop_bootcamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/layout_bg_workshop"
            android:layout_marginTop="3sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">

            <ImageView
                android:id="@+id/iv_workshop_capoeira"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:background="@drawable/home_image_border"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
