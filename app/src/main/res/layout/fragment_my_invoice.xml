<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llmy_invoice01"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/top_background_login"
            android:orientation="horizontal" />
        <TextView
            android:id="@+id/tv_my_invoice_description"
            app:layout_constraintTop_toBottomOf="@+id/llmy_invoice01"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginStart="10sp"
            android:textSize="16sp"
            android:text="De volgende adressen worden standaard gebruikt op de afrekenpagina."/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_my_invoice_01"
            android:layout_marginStart="10sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_invoice_description"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/contact_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_my_invoiceaddress_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Factuuradres"
                android:layout_marginStart="20sp"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_my_invoiceaddress_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_my_invoiceaddress_title"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Informatie"
                android:layout_marginStart="20sp"
                android:textSize="16sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tv_my_invoice_edit_invoice_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/const_my_invoice_01"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Bewerken"
            android:layout_marginStart="30sp"
            android:textSize="16sp"
            android:textColor="@color/orange"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="20sp"
            android:id="@+id/const_my_invoice_02"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_invoice_edit_invoice_data"
            android:background="@drawable/contact_background"
            android:layout_marginStart="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_my_invoice_workshopaddress_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Workshop locatie"
                android:layout_marginStart="20sp"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_my_invoice_workshopinfo_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_my_invoice_workshopaddress_title"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Informatie"
                android:layout_marginStart="20sp"
                android:textSize="16sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tv_my_invoice_edit_workshopinfo_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/const_my_invoice_02"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Bewerken"
            android:layout_marginStart="30sp"
            android:textSize="16sp"
            android:textColor="@color/orange"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>