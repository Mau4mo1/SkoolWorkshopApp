<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="20sp"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/cart_table_background">
            <ImageButton
                android:id="@+id/btn_delete_workshop"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/ic_delete_foreground"
                android:backgroundTint="@color/lightgrey"
                android:gravity="left"
                android:layout_gravity="left"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/cart_table_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3sp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dienst:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textSize="17sp"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/shopping_cart_dienst"
                    android:layout_gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Workshop rap"
                    android:textColor="@color/burntorange"
                    android:textSize="17sp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aantal workshop rondes:"
                    android:textColor="@color/text_grey"
                    android:gravity="left"
                    android:textSize="16sp"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/shopping_cart_rondes"
                    android:layout_gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/text_grey"
                    android:textSize="17sp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aantal minuten per workshopronde:"
                    android:textColor="@color/text_grey"
                    android:gravity="left"
                    android:textSize="16sp"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/shopping_cart_minuten"
                    android:layout_gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:textColor="@color/text_grey"
                    android:textSize="17sp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Totale duur in minuten:"
                    android:textColor="@color/text_grey"
                    android:gravity="left"
                    android:textSize="16sp"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/shopping_cart_totale_minuten"
                    android:layout_gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textColor="@color/text_grey"
                    android:textSize="17sp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tijdschema:"
                    android:textColor="@color/text_grey"
                    android:gravity="left"
                    android:paddingRight="5sp"
                    android:textSize="17sp"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/shopping_cart_tijdschema"
                    android:layout_gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Voorbeeld"
                    android:textColor="@color/text_grey"
                    android:textSize="17sp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leerniveau:"
                    android:textColor="@color/text_grey"
                    android:gravity="left"
                    android:textSize="17sp"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/shopping_cart_leerniveau"
                    android:layout_gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Voorbeeld"
                    android:textColor="@color/text_grey"
                    android:textSize="17sp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workshopdatum:"
                    android:textColor="@color/text_grey"
                    android:gravity="left"
                    android:textSize="17sp"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/shopping_cart_datum"
                    android:layout_gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="3 Juni 2021"
                    android:textColor="@color/text_grey"
                    android:textSize="17sp"
                    android:gravity="right"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:background="@drawable/cart_table_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prijs:"
                android:textColor="@color/text_grey"
                android:gravity="left"
                android:textSize="20sp"
                android:layout_gravity="left"/>
            <TextView
                android:id="@+id/shopping_cart_prijs"
                android:layout_gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="â‚¬325,00"
                android:textColor="@color/text_grey"
                android:textSize="17sp"
                android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>