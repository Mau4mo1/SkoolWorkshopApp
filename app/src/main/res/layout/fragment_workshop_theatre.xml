<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/sv_category_workshops"
    android:layout_marginBottom="70sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_workshop_theatre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/title_workshop_theatre"
            android:textSize="32sp"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/title_workshop_theatre"
            android:layout_marginTop="40sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">

            <LinearLayout
                android:id="@+id/layout_workshop_soap_acting"
                app:layout_constraintTop_toBottomOf="@+id/title_workshop_theatre"
                android:background="@drawable/layout_bg_workshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp">
                <ImageView
                    android:id="@+id/iv_workshop_soap_acting"
                    android:layout_width="110sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_image_border"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_workshop_soap_acting_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_soap_acting"
                            android:layout_margin="10dp"
                            android:textSize="22sp"/>
                        <TextView
                            android:id="@+id/tv_workhop_soap_acting_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsem blablabla"
                            android:layout_margin="10dp"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/soap_acting_info"
                        android:background="@drawable/layout_bg"
                        android:src="@drawable/ic_baseline_info_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70sp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_workshop_stage_fighting"
                xmlns:android="http://schemas.android.com/apk/res/android"
                app:layout_constraintTop_toBottomOf="@+id/layout_workshop_soap_acting"
                android:background="@drawable/layout_bg_workshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp">

                <ImageView
                    android:id="@+id/iv_workshop_stage_fighting"
                    android:layout_width="110sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_image_border" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_workshop_stage_fighting_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_stage_fighting"
                            android:layout_margin="10dp"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/tv_workshop_stage_fighting_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsem blablabla"
                            android:layout_margin="10dp"
                            android:textSize="18sp"/>

                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/stage_fighting_info"
                        android:background="@drawable/layout_bg"
                        android:src="@drawable/ic_baseline_info_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_workshop_theatre_sport"
                xmlns:android="http://schemas.android.com/apk/res/android"
                app:layout_constraintTop_toBottomOf="@+id/layout_workshop_stage_fighting"
                android:background="@drawable/layout_bg_workshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp">

                <ImageView
                    android:id="@+id/iv_workshop_theatre_sport"
                    android:layout_width="110sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_image_border"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_workshop_theatre_sport_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_theatre_sport"
                            android:layout_margin="10dp"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/tv_workshop_theatre_sport_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsem blablabla"
                            android:layout_margin="10dp"
                            android:textSize="18sp"/>

                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/theatre_sport_info"
                        android:background="@drawable/layout_bg"
                        android:src="@drawable/ic_baseline_info_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>