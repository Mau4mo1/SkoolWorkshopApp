<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/shopping_cart_scrollview">
    <LinearLayout
        android:paddingTop="20sp"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/cart_table_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservering:"
                android:textColor="@color/text_grey"
                android:gravity="left"
                android:textSize="20sp"
                android:layout_gravity="left"/>
            <TextView
                android:id="@+id/tv_my_reservation_id"
                android:layout_gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="*Reservering ID*"
                android:textColor="@color/text_grey"
                android:textSize="17sp"
                android:gravity="right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/cart_table_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datum:"
                android:textColor="@color/text_grey"
                android:gravity="left"
                android:textSize="20sp"
                android:layout_gravity="left"/>
            <TextView
                android:id="@+id/tv_my_reservation_date"
                android:layout_gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="*De datum*"
                android:textColor="@color/text_grey"
                android:textSize="17sp"
                android:gravity="right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/cart_table_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textColor="@color/text_grey"
                android:gravity="left"
                android:textSize="20sp"
                android:layout_gravity="left"/>
            <TextView
                android:id="@+id/tv_my_reservation_status"
                android:layout_gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="*De status*"
                android:textColor="@color/text_grey"
                android:textSize="17sp"
                android:gravity="right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/cart_table_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Totaal:"
                android:textColor="@color/text_grey"
                android:gravity="left"
                android:textSize="20sp"
                android:layout_gravity="left"/>
            <TextView
                android:id="@+id/tv_my_reservation_total_kost"
                android:layout_gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="*Totale kosten*"
                android:textColor="@color/text_grey"
                android:textSize="17sp"
                android:gravity="right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/cart_table_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actie:"
                android:textColor="@color/text_grey"
                android:gravity="left"
                android:textSize="20sp"
                android:layout_gravity="left"/>
            <Button
                android:id="@+id/button_my_reservation_info"
                android:layout_marginStart="170sp"
                android:layout_gravity="right"
                android:layout_width="110sp"
                android:layout_height="40sp"
                android:text="Bekijken"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange"
                android:textSize="17sp"
                android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>