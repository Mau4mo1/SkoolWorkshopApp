<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/shopping_cart_scrollview">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="350sp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        tools:context=".ui.shoppingcart.ShoppingCartFragment">

        <Button
            android:layout_marginTop="20sp"
            android:id="@+id/btn_cart_extra_workshop"
            android:layout_width="290sp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"
            android:text="Extra workshop toevoegen"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shopping_cart_workshop_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false">

        </androidx.recyclerview.widget.RecyclerView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shopping_cart_culture_day_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false">

        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
            android:paddingTop="20sp"
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/cart_table_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Totaal:"
                    android:textColor="@color/text_grey"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/shopping_cart_subtotal"
                    android:layout_gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="*Prijs zonder reiskosten*"
                    android:textColor="@color/text_grey"
                    android:textSize="17sp"
                    android:gravity="right"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"
            android:text="Doorgaan naar afrekenen"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="15sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>